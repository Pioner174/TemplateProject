@page "/pages/message"
@using Microsoft.AspNetCore.Http
@model MessageModel


@{
    Layout = "_Layout";
}
@if(Model.Message is string )
{
    @Model.Message
}
else if (Model.Message is IDictionary<string, string> dict)
{
    <table class="table table-sm table-striped table-bordered">
            <thead><tr><th>Nane</th><th>Value</th></tr></thead>
            <tbody>
            @foreach (var kvp in dict)
               {
                   <tr><td>@kvp.Key</td><td>@kvp.Value</td></tr>
               }
            </tbody>
    </table>
}

@functions{
    [RequireHttps]
    public class MessageModel : PageModel{
        public object Message { get; set; } = "This is the Message Razor Page";

        
        }
    }
}
