@model Product
@{
    Layout = "_SimpleLayout";
}

<h5 class="bg-primary text-white text-center p-2">HTML Form</h5>

@*Указание метода действия*@
@*<form asp-action="submitform" method="post">*@


<form asp-action="submitform" method="post" id="htmlform">
    <div class="form-group">
        <label asp-for="ProductId"></label>
        <input class="form-control" asp-for="ProductId"/>
    </div>   
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
    </div>  
    <div class="form-group">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
    </div>    
    <div class="form-group">
        <label asp-for="Category"></label>
        <select class="form-control" asp-for="CategoryId">
            <option value="1">Продукты питания</option>
            <option value="2">Спорт инвентарь</option>
            <option value="3">Техника</option>
        </select>
    </div>    
    <div class="form-group">
        <label asp-for="Supplier"></label>
        <input class="form-control" asp-for="Supplier.Name" />
    </div>    
    
</form>
<button form="htmlform" asp-action="submitform" type="submit" class="btn btn-primary mt-2">Submit (Вне формы)</button>