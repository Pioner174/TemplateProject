@model Product
@{
    Layout = "_SimpleLayout";
}

<h5 class="bg-primary text-white text-center p-2">HTML Form</h5>

@*Указание метода действия*@
@*<form asp-action="submitform" method="post">*@

@*Кнопка вне формы*@
<form asp-action="submitform" method="post" id="htmlform">
    <div class="form-group">
        <label>Id</label>
        <input class="form-control" asp-for="ProductId"/>
    </div>   
    <div class="form-group">
        <label>Название</label>
        <input class="form-control" asp-for="Name"/>
    </div>  
    <div class="form-group">
        <label>Цена</label>
        <input class="form-control" asp-for="Price" />
    </div>    
    <div class="form-group">
        <label>Категория</label>
        <input class="form-control" asp-for="Category.Name" />
    </div>    
    <div class="form-group">
        <label>Поставщик</label>
        <input class="form-control" asp-for="Supplier.Name" />
    </div>    
    
</form>
<button form="htmlform" asp-action="submitform" type="submit" class="btn btn-primary mt-2">Submit (Вне формы)</button>