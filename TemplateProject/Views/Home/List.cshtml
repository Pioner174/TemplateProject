@model IEnumerable<Product>
@{
    Layout = "_SimpleLayout";
}

<h6 class="bg-primary text-white text-center m-2 p-2">Таблица продуктов</h6>
<div class="m-2">
    <table class="table table-sm table-striped table-bordered">
        <thead><tr><th>Название</th><th>Цена</th><th>Категория</th><th>Поставщик</th><th></th></tr></thead>
        <tbody>
            @foreach(Product p in Model){
                <partial name="_RowPartial" model="p" />
            }
        </tbody>
    </table>
</div>
   