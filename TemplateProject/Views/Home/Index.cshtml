@model Product
@{  
    Layout = "_SimpleLayout";
}

<div route-data="true"></div>
@*<div class="m-2" wrap="true">Inner Context</div>*@

@*Подавление выходного элемента*@
<div show-when-gt="500" for="Price">
    <h5 class="bg-danger text-white text-center p-2">Warning: Expensive Item</h5>
</div>

<table class="table table-striped table-bordered table-sm">
    <tablehead bg-color="dark">Product Summary</tablehead>
    @*<thead>
        <tr bg-color="dark" text-color="black">
            <th colspan="2">Product Summary</th>
        </tr>
    </thead>*@
    <tbody>
        @*<tr><th>Name</th><td highlight="true">@Model.Name</td></tr>
        <tr>
            <th>Price</th>
            <td bg-color="dark">@Model.Price.ToString("c")</td>
        </tr>
        <tr><th>Category ID</th><td>@Model.CategoryId</td></tr>*@

        @*Использование с ModelExpression*@
        @*<tr for="Name"/>
        <tr for="Price" format="c"/>
        <tr for="CategoryId"/>*@

        @*Применение координированных вспомогательных функций*@
        <tr theme="primary">
            <th>Name</th><td>@Model.Name</td>
        </tr>
        <tr theme="secondary">
            <th>Price</th><td>@Model.Price.ToString("c")</td>
        </tr>
        <tr theme="info">
            <th>Category</th><td>@Model.CategoryId</td>
        </tr>
    </tbody>
</table>